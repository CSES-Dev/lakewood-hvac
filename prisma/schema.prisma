generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "prisma-zod-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model reviews {
  id       Int    @id @default(autoincrement())
  author   String
  comments String
}

model engagements {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  imageUrl    String
  isVisible   Boolean  @default(true)
}